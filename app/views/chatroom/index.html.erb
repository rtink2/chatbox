<h2 class="ui center aligned icon header mt-5">
  <i class="circular coffee orange icon"></i>
  Say Something
</h2>

<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content" id='chats'>
        <div class="ui feed" id='chat-container'>
           <%= render @chats %>
        </div>
      </div>
      <div class="extra content">
        <%= form_for(@chat, html: {class: "ui reply form", role: "form"}, url: chat_path, remote: true) do |f| %>
        
          <div class="field">
            <div class="ui fluid icon input">
              <%= f.text_field :body %>
              <%= f.button '<i class="bordered inverted orange edit icon"></i>'.html_safe %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <a class="active item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
</div>